<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Breathing Support Rib -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BreathingSupportRib"]/label</xpath>
		<success>Always</success>
		<value>
			<label>breathing support rib</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BreathingSupportRib"]/labelNoun</xpath>
		<success>Always</success>
		<value>
			<labelNoun>a breathing support rib</labelNoun>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="BreathingSupportRib"]/stages</xpath>
		<success>Always</success>
		<value>
			<stages Inherit="False">
				<li>
					<statOffsets>
						<ArmorRating_Blunt>0.010</ArmorRating_Blunt>
						<ArmorRating_Heat>0.010</ArmorRating_Heat>
						<ArmorRating_Sharp>0.010</ArmorRating_Sharp>
					</statOffsets>
					<capMods>
						<li>
							<capacity>Breathing</capacity>
							<!----><offset>0.01</offset>
						</li>
					</capMods>
				</li>
			</stages>
		</value>
	</Operation>

