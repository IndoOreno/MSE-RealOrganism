<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Advanced Breathing Support Rib -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="AdvancedBreathingSupportRib"]/label</xpath>
		<success>Always</success>
		<value>
			<label>advanced breathing support rib</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="AdvancedBreathingSupportRib"]/labelNoun</xpath>
		<success>Always</success>
		<value>
			<labelNoun>an advanced breathing support rib</labelNoun>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="AdvancedBreathingSupportRib"]/stages</xpath>
		<success>Always</success>
		<value>
			<stages Inherit="False">
				<li>
					<statOffsets>
						<ArmorRating_Blunt>0.020</ArmorRating_Blunt>
						<ArmorRating_Heat>0.020</ArmorRating_Heat>
						<ArmorRating_Sharp>0.020</ArmorRating_Sharp>
					</statOffsets>
					<capMods>
						<li>
							<capacity>Breathing</capacity>
							<!----><offset>0.02</offset>
						</li>
					</capMods>
				</li>
			</stages>
		</value>
	</Operation>

